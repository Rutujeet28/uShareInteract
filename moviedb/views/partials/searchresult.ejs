<body>

  <div class="container-fluid" >
 
    <div class="row" style="height: 100vh;">
      <div class="col-lg-3  d-none d-sm-inline-block col-sm-4 col-prof justify-content-center" >

        <h2 class="web-name"><span><i class='bx bxs-cricket-ball'></i></span>
          <a href="/user/post" style="color: #000000;"> UShareInteracts </a></h2>

        <div class="d-flex left-ui">
        <div class="profile">
          <a href="/user/profile/<%=user._id%>">
          <p style="margin-top: 50px;"> <span class="profile_head">Profile<span></span> <span><i class='bx bx-md bxs-user'></i></span></p>
        </a>
        </div>
        <div>
          <%- include('createModal') %>
          <button type="button" class="btn btn-post" data-bs-toggle="modal" data-bs-target="#exampleModal1">
            Post something
            </button>
        </div>
        </div>
      </div>
 
      <div class="col-lg-6 col-12 col-sm-8 col-content p-0" >
       
       <div class="home-head">
        <p>Home</p>
      

       </div>
      

       <div class="row">
    
         
      <% if(users.length==0){ %>
        <div  class="col-lg-12 mb-0">
        <h1 style="text-align: center;">No Users found</h1>
        </div>
        <%}%>

      <% for(let i=0;i<users.length;i++) {%>
        <div  class="col-lg-12 mb-0">
        <span style="margin-right:0.5rem;font-weight: bold; display: none;" ><%=users[i].following.length%></span>  
        <span style="margin-right:0.5rem;  display: none;  font-weight: bold;" id="followers"><%=users[i].followers.length%></span>
      <div class="card search-card " style=" width: 100%;" >
        <div class="row g-0">
          <div class="col-2 d-flex align-items-start" style="padding-left: 35px;     align-items: start;
          padding-top: 5px;">
            <img class="search-pic" src="<%=users[i].profile_image ? users[i].profile_image.url : 'data:image/png;base64,'  %>" class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-7" >
            <div class="card-body" style="
            padding: 0.4rem 0;">
              <h5 class="card-title"> <a style="color: #000000;" href="/user/profile/<%=users[i]._id%>"> <%=users[i].username%></a></h5>
              <p class="card-text"><%=users[i].bio%></p>
           

            </div>
          </div>
          <div class="col-3" style="    display: flex;
          align-items: center;
          justify-content: center;">
            
            <%  if(current_user.id!=users[i]._id) { %>
            <div class="d-flex justify-content-end">
              <button profile="<%=users[i]._id%>" onclick="followToggleSearch(this)" class="btn  btn-follow" style="margin-right:25px;width: 90px;">
   
                <%= user_following && user_following.includes(users[i]._id) ? 'Unfollow' : 'Follow' %>
              </button>
              
            </div>
            <%}%>

          </div>
        </div>
      </div>
      </div>

      <%}%>
      
       

      </div>
     









      </div>







      <div class="d-none d-lg-inline-block col-lg-3 col-more" >

        <div class="wrap">
          <div class="search  ">
            <form  action="/user/search" method="post">
              <div class="d-flex">
             <input id="user_search" name="user_search" type="text" class="searchTerm" placeholder="What are you looking for?">
             <button type="submit" class="searchButton">
              <i class='bx bx-search'></i>
            </button>
            </div>
            </form>
          </div>
       </div>


       
     
       
    
      </div>
    </div>
  </div>



    
</body>

